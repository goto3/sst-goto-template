{
  "extends": "@tsconfig/node18/tsconfig.json",
  "exclude": [
    "node_modules",
  ],
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "Errors/*": [
        "./_lib/errors/*"
      ],
      "Types/*": [
        "./_lib/types/*"
      ],
      "Wrappers/*": [
        "./_lib/wrappers/*"
      ],
      "Postgres/*": [
        "./infra/postgres/*"
      ],
      "Repositories/*": [
        "./infra/repositories/*"
      ],
      "Services/*": [
        "./services/*"
      ],
    }
  }
}