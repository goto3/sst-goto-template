{
  "extends": "@tsconfig/node18/tsconfig.json",
  "exclude": [
    "node_modules",
    "src"
  ],
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@stacks/*": [
        "./stacks/*"
      ],
      "Contexts/*": [
        "./backend/contexts/*"
      ],
      "Repository/*": [
        "./backend/repository/*"
      ],
      "Repositories/*": [
        "./backend/repository/domains/*"
      ],
    }
  }
}